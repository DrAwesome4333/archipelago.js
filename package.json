{
    "name": "@pharware/archipelago",
    "version": "2.0.0-dev+1725915542",
    "description": "A runtime-agnostic and zero dependency TypeScript/JavaScript library for communicating with Archipelago servers.",
    "license": "MIT",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "author": {
        "email": "zach@alliware.com",
        "name": "Zach Parks",
        "url": "https://pharware.com"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "engines": {
        "node": ">= 18.0.0"
    },
    "scripts": {
        "cjs": "rollup ./dist/index.js --config ./rollup.config.js",
        "clean": "rimraf -rf dist",
        "docs": "rimraf -rf docs && typedoc --options typedoc.json",
        "build": "pnpm run clean && tsc && webpack",
        "lint": "eslint src",
        "pack": "pnpm pack --pack-destination packs",
        "test": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "jest": {
        "coveragePathIgnorePatterns": [
            "<rootDir>/src/api/"
        ],
        "testEnvironment": "node",
        "transform": {
            "^.+.tsx?$": [
                "ts-jest",
                {}
            ]
        }
    },
    "homepage": "https://thephar.github.io/archipelago.js/",
    "repository": "https://github.com/ThePhar/archipelago.js.git",
    "bugs": "https://github.com/ThePhar/archipelago.js/issues",
    "devDependencies": {
        "@eslint/js": "^9.10.0",
        "@stylistic/eslint-plugin": "^2.7.2",
        "@types/eslint__js": "^8.42.3",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.5.4",
        "eslint": "^9.10.0",
        "eslint-plugin-jsdoc": "^50.2.2",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "jest": "^29.7.0",
        "rimraf": "^6.0.1",
        "rollup": "^4.21.2",
        "terser-webpack-plugin": "^5.3.10",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "tsx": "^4.19.0",
        "typedoc": "^0.26.6",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.4.0",
        "webpack": "^5.94.0",
        "webpack-cli": "^5.1.4"
    }
}
